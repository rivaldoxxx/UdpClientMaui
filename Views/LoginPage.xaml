<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UdpClientMaui.LoginPage">
    <StackLayout Padding="30">
        <Label Text="Zaloguj się" FontSize="24" HorizontalOptions="Center" />
        <Entry Placeholder="Nazwa użytkownika" x:Name="UsernameEntry" />
        <Entry Placeholder="Hasło" IsPassword="True" x:Name="PasswordEntry" />
        <Button Text="Zaloguj się" Clicked="OnLoginClicked" />
    </StackLayout>
</ContentPage>
