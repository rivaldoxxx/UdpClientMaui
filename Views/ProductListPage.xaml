<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UdpClientMaui.ProductListPage">
    <StackLayout>
        <ListView x:Name="ProductListView" ItemsSource="{Binding Products}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding Name}" />
                            <Label Text="{Binding SlotInfo}" />
                            <Button Text="Skanuj" CommandParameter="{Binding .}" Clicked="OnScanClicked" />
                            <Button Text="Potwierdź" CommandParameter="{Binding .}" Clicked="OnConfirmClicked" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Pokaż wózek" Clicked="OnShowCartClicked" />
    </StackLayout>
</ContentPage>
